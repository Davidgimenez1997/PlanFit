<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.RegisterDetailsFragmet">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nombre Completo"
                android:ems="10"
                android:id="@+id/fullName" android:layout_marginTop="36dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="84dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Nick"
                android:ems="10"
                android:id="@+id/nickName" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/fullName" android:layout_marginStart="84dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:id="@+id/imageViewUser" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/nickName" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="140dp"/>
        <Button
                android:text="Ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOk" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewUser" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="148dp"/>
        <Button
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBackDetails" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonOk" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="148dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>