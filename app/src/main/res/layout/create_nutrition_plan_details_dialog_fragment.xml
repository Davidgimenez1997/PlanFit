<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/backgroung_grad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="wrap_content"
            android:background="@drawable/backgroung_grad"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:background="@drawable/corner_layout"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Â¿Cuando deseas hacerlo?"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/open_recipe_nutrition"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.522" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewNutrition"
            />
            <Button
                    android:text="@string/close_info"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/close_favorite_nutrition"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/close_favorite_nutrition2"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
            <Button
                    android:text="@string/close_info"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/close_favorite_nutrition2"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"
            />
            <TextView
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:maxLines="5"
                    android:id="@+id/textTitleNutrition"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginTop="64dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageViewNutrition" app:layout_constraintTop_toBottomOf="@+id/textTitleNutrition"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.502"
                    app:srcCompat="@mipmap/ic_launcher"/>
            <Spinner
                    android:entries="@array/timePlan"
                    android:layout_width="205dp"
                    android:layout_height="28dp"
                    android:id="@+id/spinner"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/open_recipe_nutrition"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="65dp"/>
            <Spinner
                    android:entries="@array/timePlan"
                    android:layout_width="205dp"
                    android:layout_height="28dp"
                    android:id="@+id/spinner2"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinner"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="65dp"/>
            <TextView
                    android:text="Comienzo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/spinner"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintHorizontal_bias="0.181" android:layout_marginTop="416dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Fin:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/spinner2"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.058"/>
            />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>