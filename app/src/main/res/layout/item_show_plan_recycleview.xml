                app:layout_constraintStart_toEndOf="@+id/timeStart"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.95"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
        <TextView
                android:text="Pulsa para mas informaciÃ³n"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:typeface="sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
