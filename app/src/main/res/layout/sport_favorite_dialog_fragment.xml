<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bg_welcome"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

    <ScrollView
            android:layout_width="wrap_content"
            android:background="@drawable/bg_welcome"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@drawable/corner_layout"
                android:layout_height="wrap_content">

            <Button
                    android:text="@string/abrir_video"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/open_youtube_sport"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.522" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewSport" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textviewDescriptionSport"/>
            <Button
                    android:text="@string/eliminar"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/delete_favorite_sport"
                    android:layout_marginStart="64dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/textviewDescriptionSport"
            />
            <Button
                    android:text="@string/close_info"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/close_favorite_sport"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/delete_favorite_sport"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"/>
            <TextView
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:maxLines="5"
                    android:id="@+id/textTitleSport"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginTop="64dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:layout_width="239dp"
                    android:maxLines="10"
                    android:layout_height="89dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textviewDescriptionSport"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/open_youtube_sport"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
                    android:layout_marginStart="64dp"/>
            <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageViewSport" app:layout_constraintTop_toBottomOf="@+id/textTitleSport"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.502"
                    app:srcCompat="@drawable/icon_gallery"/>
            />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>